<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/graient_color_background"
    tools:context=".edit_car">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/welcome_to_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="56dp"
                    android:text="Edit Car "
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/CompanyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="16dp"
                    android:text="Company"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="@+id/company"
                    app:layout_constraintTop_toBottomOf="@+id/welcome_to_title" />

                <EditText
                    android:id="@+id/company"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:backgroundTint="@color/white"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/CompanyText" />

                <TextView
                    android:id="@+id/seatsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Seats Number"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="@+id/CompanyText"
                    app:layout_constraintTop_toBottomOf="@+id/company" />

                <EditText
                    android:id="@+id/seats"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/white"
                    android:ems="10"
                    android:inputType="number"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/company"
                    app:layout_constraintStart_toStartOf="@+id/company"
                    app:layout_constraintTop_toBottomOf="@+id/seatsText" />

                <TextView
                    android:id="@+id/priceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Price"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="@+id/CompanyText"
                    app:layout_constraintTop_toBottomOf="@+id/seats" />

                <EditText
                    android:id="@+id/price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/white"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/company"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/company"
                    app:layout_constraintTop_toBottomOf="@+id/priceText" />

                <TextView
                    android:id="@+id/DailypriceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Daily Price"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="@+id/CompanyText"
                    app:layout_constraintTop_toBottomOf="@+id/price" />

                <EditText
                    android:id="@+id/Dailyprice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/white"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/company"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/company"
                    app:layout_constraintTop_toBottomOf="@+id/DailypriceText" />

                <TextView
                    android:id="@+id/MonthlypriceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Monthly Price"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="@+id/CompanyText"
                    app:layout_constraintTop_toBottomOf="@+id/Dailyprice" />

                <EditText
                    android:id="@+id/Monthlyprice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/white"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/company"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/company"
                    app:layout_constraintTop_toBottomOf="@+id/MonthlypriceText" />

                <TextView
                    android:id="@+id/mileageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Mileage"
                    android:textColor="@android:color/white"
                    app:layout_constraintStart_toStartOf="@+id/CompanyText"
                    app:layout_constraintTop_toBottomOf="@+id/Monthlyprice" />

                <EditText
                    android:id="@+id/mileage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/white"
                    android:ems="10"
                    android:inputType="number"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/price"
                    app:layout_constraintStart_toStartOf="@+id/price"
                    app:layout_constraintTop_toBottomOf="@+id/mileageText" />

                <TextView
                    android:id="@+id/colorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Color"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="@+id/mileageText"
                    app:layout_constraintTop_toBottomOf="@+id/mileage" />

                <EditText
                    android:id="@+id/color"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/company"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/company"
                    app:layout_constraintTop_toBottomOf="@+id/colorText" />

                <TextView
                    android:id="@+id/modelText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Model"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="@+id/mileageText"
                    app:layout_constraintTop_toBottomOf="@+id/color" />

                <EditText
                    android:id="@+id/model"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/company"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/company"
                    app:layout_constraintTop_toBottomOf="@+id/modelText" />

                <TextView
                    android:id="@+id/yearText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Year"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="@+id/mileageText"
                    app:layout_constraintTop_toBottomOf="@+id/model" />

                <EditText
                    android:id="@+id/year"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:ems="10"
                    android:inputType="number"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/company"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/company"
                    app:layout_constraintTop_toBottomOf="@+id/yearText" />

                <TextView
                    android:id="@+id/imageURLText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Image URL"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="@+id/yearText"
                    app:layout_constraintTop_toBottomOf="@+id/year" />

                <EditText
                    android:id="@+id/imageURL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/year"
                    app:layout_constraintStart_toStartOf="@+id/year"
                    app:layout_constraintTop_toBottomOf="@+id/imageURLText" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/add"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:background="@drawable/intro_btn_background"
                    android:gravity="center"
                    android:text="Save Car"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    app:layout_constraintEnd_toEndOf="@+id/year"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/year"
                    app:layout_constraintTop_toBottomOf="@+id/imageURL" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/reset"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/intro_btn_background"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Reset"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    app:layout_constraintEnd_toEndOf="@+id/add"
                    app:layout_constraintStart_toStartOf="@+id/add"
                    app:layout_constraintTop_toBottomOf="@+id/add" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>